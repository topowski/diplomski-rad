<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" styleClass="login-kontejner" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="itacademy.javadevelopment.diplomskirad.controllers.LoginController">
    <stylesheets>
        <URL value="@../css/login.css" />
    </stylesheets>

    <Label text="Korisničko ime" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="korisnickoImePolje" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Šifra" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="sifraPolje" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <ButtonBar GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <buttons>
            <Button fx:id="potvrdiDugme" alignment="CENTER" onAction="#klikniPotvrdiDugme" styleClass="potvrdi-dugme" text="Potvrdi"/>
        </buttons>
    </ButtonBar>
    <Label fx:id="greskaLabela" alignment="CENTER" styleClass="greska-labela" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
